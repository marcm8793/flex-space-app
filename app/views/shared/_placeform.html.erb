<%= simple_form_for [@place, @booking] do |f| %>
  <div class="form-inputs">
    <%= f.label :first_day %>
    <%= f.date_field :first_day %>
  </div>

  <div class="form-inputs">
    <%= f.label :last_day %>
    <%= f.date_field :last_day %>
  </div>

  <div class="btn form-actions">
    <%= f.submit %>
  </div>
<% end %>
