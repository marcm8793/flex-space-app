<div class="container pt-100 mt-100">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="bookings-tab" data-bs-toggle="tab" href="#bookings" role="tab" aria-controls="bookings" aria-selected="true">My Bookings</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="places-tab" data-bs-toggle="tab" href="#places" role="tab" aria-controls="places" aria-selected="false">My Places</a>
  </li>
  <li class="nav-item ms-auto" role="presentation">
    <a class="nav-link" id="add-place-tab" data-bs-toggle="tab" href="#add-place" role="tab" aria-controls="add-place" aria-selected="false">Add a Place</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="bookings" role="tabpanel" aria-labelledby="bookings-tab">
    <div class="container pt-4 mt-4">
      <h2>My Bookings</h2>
      <%= render 'shared/bookingcardtrip' %>
    </div>
  </div>
  <div class="tab-pane fade" id="places" role="tabpanel" aria-labelledby="places-tab">
    <div class="container pt-4 mt-4">
      <h2>My Places</h2>
      <%= render 'shared/placecardtrip' %>
    </div>
  </div>
  <div class="tab-pane fade" id="add-place" role="tabpanel" aria-labelledby="add-place-tab">
    <div class="container pt-4 mt-4 d-flex justify-content-end">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
        Add a Place
      </button>
      <%= render 'shared/addplacemodal' %>
    </div>
  </div>
</div>

</div>
