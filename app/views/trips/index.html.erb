<div class="container pt-100 mt-100">
  <ul class="nav nav-tabs d-flex justify-content-between" id="myTab" role="tablist">
    <div class="d-flex">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="bookings-tab" data-bs-toggle="tab" data-bs-target="#bookings-tab-pane" type="button" role="tab" aria-controls="bookings-tab-pane" aria-selected="true">
          <%= image_tag "bookingtripsicon.svg", alt: "backpack logo", width: "25", height: "25", style:"cursor: pointer;" %>
          My Bookings
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="places-tab" data-bs-toggle="tab" data-bs-target="#places-tab-pane" type="button" role="tab" aria-controls="places-tab-pane" aria-selected="false">
          <%= image_tag "placetripsicon.svg", alt: "backpack logo", width: "25", height: "25", style:"cursor: pointer;" %>
          My Places
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="favorites-tab" data-bs-toggle="tab" data-bs-target="#favorites-tab-pane" type="button" role="tab" aria-controls="favorites-tab-pane" aria-selected="false">
          <%= image_tag "favoritestripsicon.svg", alt: "backpack logo", width: "25", height: "25", style:"cursor: pointer;" %>
          My Favorites
        </button>
      </li>
    </div>
    <li class="nav-item" role="presentation">
      <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
        Add a Place
      </button>
      <%= render 'shared/addplacemodal' %>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="bookings-tab-pane" role="tabpanel" aria-labelledby="bookings-tab" tabindex="0">
      <div class="container pt-4 mt-4">
        <h2>My Bookings</h2>
        <%= render 'shared/bookingcardtrip' %>
      </div>
    </div>
    <div class="tab-pane fade" id="places-tab-pane" role="tabpanel" aria-labelledby="places-tab" tabindex="0">
      <div class="container pt-4 mt-4">
        <h2>My Places</h2>
        <%= render 'shared/placecardtrip' %>
      </div>
    </div>
    <div class="tab-pane fade" id="favorites-tab-pane" role="tabpanel" aria-labelledby="favorites-tab" tabindex="0">
      <div class="container pt-4 mt-4">
        <h2>My Favorites</h2>
        <%= render 'shared/favoritecardtrip' %>
      </div>
    </div>
  </div>
</div>
