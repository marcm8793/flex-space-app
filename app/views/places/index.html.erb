<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>🖥️ All our Working-Places 🏡</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p><%= @places.count %> places available.</p>
    </div>
  </div class="row">

  <div class="row g-3">
    <% @places.each do |place| %>
      <div class="col-md-4">
        <%= render 'shared/placecardindex', place: place %>
      </div>
    <% end %>
  </div>

</div>

<% if @applied_filters.present? %>
  <div class="filters-summary">
    <h5>Applied Filters:</h5>
    <ul>
      <% @applied_filters.each do |key, value| %>
        <li><strong><%= key.to_s.humanize %>:</strong> <%= value %></li>
      <% end %>
    </ul>
    <div class="btn-group">
      <%= link_to "Reset", places_path, class: "btn btn-secondary btn-sm" %>
      <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#filterModal">Modify</button>
    </div>
  </div>
<% end %>
