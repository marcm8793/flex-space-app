<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>🖥️ All our Working-Places 🏡</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p><%= @places.count %> places available.</p>
    </div>
  </div class="row">

  <div class="row g-3">
    <% @places.each do |place| %>
      <div class="col-md-4">
        <%= render 'shared/placecardindex', place: place %>
      </div>
    <% end %>
  </div>

</div>
